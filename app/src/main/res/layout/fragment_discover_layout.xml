<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <uk.co.imallan.jellyrefresh.JellyRefreshLayout
        android:id="@+id/discover_refresh_layout"
        app:jellyColor="@color/grey_1"
        android:background="@color/tab_gb"
        app:pullHeight="96dp"
        app:triggerHeight="72dp"
        app:headerHeight="48dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tab_gb"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/discover_location_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/address_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="我的位置"
                        android:singleLine="true"
                        android:textColor="@color/grey_4"
                        android:textSize="16sp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discover_round_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/around_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="周边"
                        android:singleLine="true"
                        android:textColor="@color/grey_4"
                        android:textSize="16sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:background="@color/white"/>


                <LinearLayout
                    android:id="@+id/discover_route_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"

                    android:background="@color/white">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/route_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="路线"
                        android:singleLine="true"
                        android:textColor="@color/grey_4"
                        android:textSize="16sp"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/discover_weather_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:src="@mipmap/weather_icon"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:text="天气"
                        android:singleLine="true"
                        android:textColor="@color/grey_4"
                        android:textSize="16sp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="1dp"
                    android:background="@color/white"/>

            </LinearLayout>
        </ScrollView>

    </uk.co.imallan.jellyrefresh.JellyRefreshLayout>






</LinearLayout>
