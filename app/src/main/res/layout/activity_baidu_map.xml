<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.xiaomo.travelhelper.BaiduMapActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/baidu_map_drawer_layout">

    <!--主屏幕区-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/baidu_map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/baidu_map_discover_layout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="发现周边服务"
                android:textColor="@color/grey_3"
                android:layout_marginLeft="30dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/goto_icon_2"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:background="@color/grey_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/baidu_map_close_layout"
                    android:layout_width="56dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@mipmap/back_icon_1"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/baidu_map_location_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="当前位置"
                    android:textSize="14sp"
                    android:textColor="@color/grey_2"
                    android:background="@null" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dim56dp"
                android:layout_height="1dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@color/white">


                <EditText
                    android:id="@+id/baidu_map_keyword_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="56dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="关键字"
                    android:textSize="14sp"
                    android:textColor="@color/grey_2"
                    android:background="@null" />

            </LinearLayout>

            <TextView
                android:layout_width="@dimen/dim56dp"
                android:layout_height="1dp"
                android:background="@color/white"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@color/white">


               <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                   android:id="@+id/baidu_map_search_btn"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_margin="10dp"
                   android:textColor="@color/blue"
                   app:qmui_borderColor="@color/grey_2"
                   android:text="搜索周边"/>

            </LinearLayout>

            <TextView
                android:id="@+id/baidu_map_poi_sum_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:text="发现 0 家"
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"/>

            <ListView
                android:id="@+id/baidu_map_poi_list_view"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </LinearLayout>





</android.support.v4.widget.DrawerLayout>




